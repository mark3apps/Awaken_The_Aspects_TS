{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-new": "off",
		"no-undef": "off",
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"camelcase": [
			"warn",
			{
				"properties": "never"
			}
		],
		"accessor-pairs": "off",
		"default-case": "error",
		"grouped-accessor-pairs": "error",
		"no-lonely-if": "error",
		"brace-style": [
			"error",
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"indent": [
			"off"
		],
		"no-tabs": "off",
		"no-use-before-define": [
			"off",
			{
				"functions": false,
				"classes": false,
				"variables": false
			}
		],
		"no-unused-vars": "off",
		"no-extra-semi": "off"
	}
}
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-new": "off",
        "no-undef": "off",
        "camelcase": [
            "warn",
            {
                "properties": "never"
            }
        ],
        "accessor-pairs": "warn",
        "default-case": "error",
        "grouped-accessor-pairs": "error",
        "no-lonely-if": "error",
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "indent": [
            "error",
            "tab"
        ],
        "no-tabs": "off",
        "no-use-before-define": [
            "error",
            {
                "functions": true,
                "classes": false,
                "variables": true
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}